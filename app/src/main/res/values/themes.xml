<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ExamenKotlin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ExamenKotlin.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ExamenKotlin.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ExamenKotlin.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MovieImageViewPortrait">
        <item name="android:contentDescription">@string/img_descr_imagen_movie</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/img_movie_height</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="MovieImageViewLand">
        <item name="android:contentDescription">@string/img_descr_imagen_movie</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="MovieTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/movie_title_size</item>
        <item name="android:padding">@dimen/movie_text_padding</item>
    </style>

    <style name="MovieDescriptionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/movie_descr_size</item>
        <item name="android:padding">@dimen/movie_text_padding</item>
        <item name="android:maxLines">@integer/movie_descr_max_lines</item>
        <item name="android:minLines">@integer/movie_descr_max_lines</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginStart">@dimen/movie_text_padding</item>
    </style>
</resources>